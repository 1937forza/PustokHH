@using PustokProje.Models;
@model List<Slider>

@{
    ViewData["Title"] = "Index";
    int count = 0;
}



<!DOCTYPE html>
<html lang="en">

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="title">
                <h1 style="display: inline-block;">Slider</h1>
                <a asp-action="create" style="float:right" class="btn btn-primary">Create new</a>
            </div>
        </div>

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="table">


                <table class="table" style="color: white;">
                    <thead class="bg-primary">
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Order</th>
                            <th scope="col">Title1</th>
                            <th scope="col">Title2</th>
                            <th scope="col">BtnText</th>
                            <th scope="col">Image</th>

                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody class="bg-gradient-primary">
                        @foreach (var item in Model)
                        {

                            count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Order</td>
                            <td>@item.Title1</td>
                            <td>@item.Title2</td>
                            <td>@item.BtnText</td>
                            <td>
                                <img width="100" src="~/uploads/slider/@item.Image"/>
                            </td>


                            <td class="d-flex justify-content-end">
                                <a class="bg-success" asp-action="edit" asp-route-id="@item.Id">
                                    <span>Edit <i class="far fa-edit ps-1"></i></span>
                                </a>
                                <a class="bg-danger delete-btn" asp-action="Delete" asp-route-id="@item.Id">
                                    <span>Delete <i class="fas fa-trash ps-1"></i></span>
                                </a>
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>

