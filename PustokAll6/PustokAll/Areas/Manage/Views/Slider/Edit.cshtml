@using PustokProje.Models;
@model Slider;
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Edit Slider</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="edit" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Order">Order</label>
                    <input class="form-control" asp-for="Order" placeholder="Enter author name">
                    <span asp-validation-for="Order"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title1">Title1</label>
                    <input class="form-control" asp-for="Title1" placeholder="Enter author name">
                    <span asp-validation-for="Title1"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Title2">Title2</label>
                    <input class="form-control" asp-for="Title2" placeholder="Enter author name">
                    <span asp-validation-for="Title2"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Desc">Description</label>
                    <input class="form-control" asp-for="Desc" placeholder="Enter author name">
                    <span asp-validation-for="Desc"></span>
                </div>

                <div class="form-group">
                    <label asp-for="BtnText">BtnText</label>
                    <input class="form-control" asp-for="BtnText" placeholder="Enter author name">
                    <span asp-validation-for="BtnText"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RedirectUrl">RedirectUrl</label>
                    <input class="form-control" asp-for="RedirectUrl" placeholder="Enter author name">
                    <span asp-validation-for="RedirectUrl"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile">Image</label>
                    <input class="form-control" asp-for="ImageFile" placeholder="Enter author name">
                    <span asp-validation-for="ImageFile"></span>
                </div>

                <div class="img-box">
                    <img width="100" src="~/uploads/slider/@Model.Image" alt="Alternate Text" />
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
