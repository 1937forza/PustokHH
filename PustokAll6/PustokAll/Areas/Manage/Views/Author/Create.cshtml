@using PustokProje.Models;
@model Author;
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Create new Author</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="create" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="FullName">Name</label>
                    <input type="text" class="form-control" asp-for="FullName" placeholder="Enter author name">
                    <span asp-validation-for="FullName"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImageFile">ImageFile</label>
                    <input class="form-control" asp-for="ImageFile" >
                    <span asp-validation-for="ImageFile"></span>
                </div>


                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

@section Scripts{ 
@await Html.PartialAsync("_ValidationScriptPartial")
}