@using PustokProje.Areas.Manage.ViewModels;
@model BookViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Create new book</h1>
        </div>
        <div class="col-lg-8 mx-auto">
            <form method="post" asp-action="create">
                <div class="form-group">
                    <label asp-for="Book.Name">Name</label>
                    <input type="text" class="form-control" asp-for="Book.Name" placeholder="Enter book name">
                    <span asp-validation-for="Book.Name"></span>

                    <label asp-for="Book.Code">Code</label>
                    <input type="text" class="form-control" asp-for="Book.Code" placeholder="Enter book code">
                    <span asp-validation-for="Book.Code"></span>

                    <label asp-for="Book.CostPrice">Cost price</label>
                    <input type="text" class="form-control" asp-for="Book.CostPrice" placeholder="Enter cost price">
                    <span asp-validation-for="Book.CostPrice"></span>

                    <label asp-for="Book.DiscountPercent">Discount</label>
                    <input type="text" class="form-control" asp-for="Book.DiscountPercent" placeholder="Enter discount">
                    <span asp-validation-for="Book.DiscountPercent"></span>

                    <label asp-for="Book.SalePrice">Sale Price</label>
                    <input type="text" class="form-control" asp-for="Book.SalePrice">
                    <span asp-validation-for="Book.SalePrice"></span>

                    <label asp-for="Book.StockStatus">Stock status</label>
                    <input type="radio" class="form-control" id="inStock" name="stock" value="1" asp-for="Book.StockStatus">
                    <label for="inStock">In stock</label>

                    <input type="radio" class="form-control" id="noStock" name="stock" value="0" asp-for="Book.StockStatus">
                    <label for="noStock">In stock</label>

                    <label asp-for="Book.AuthorId">Author id</label>
                    <input type="text" class="form-control" asp-for="Book.AuthorId">
                    <select name="cars" id="cars">

                        @foreach (var item in Model.Authors)
                        {
                            <option value="@item.Id">@item.FullName</option>
                        }
                    </select>
                    <span asp-validation-for="Book.AuthorId"></span>

                    <label asp-for="Book.GenreId">Genre id</label>
                    <input type="text" class="form-control" asp-for="Book.GenreId">
                    <span asp-validation-for="Book.AuthorId"></span>
                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>



@section Scripts{
    @await Html.PartialAsync("_ValidationScriptPartial")
}